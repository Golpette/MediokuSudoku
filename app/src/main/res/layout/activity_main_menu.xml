<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.puzzle.andrew.sudowordsandroid.MainMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SudoWords"
        android:id="@+id/textView"
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/crossword"
        android:src="@drawable/crossword"
        android:onClick="openCrossword"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <ImageButton
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/wordsearch"
        android:src="@drawable/wordsearch"
        android:nestedScrollingEnabled="false"
        android:onClick="openWordsearch"
        android:layout_marginBottom="65dp"
        android:layout_above="@+id/sudoku"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <ImageButton
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:id="@+id/sudoku"
        android:src="@drawable/sudoku"
        android:onClick="openSudoku"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:clickable="true" />

    <EditText
        android:layout_width="@dimen/button_text_width"
        android:layout_height="@dimen/button_text_height"
        android:id="@+id/crosswordText"
        android:layout_alignBottom="@+id/crossword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Crossword"
        android:textIsSelectable="false"
        android:textSize="20dp"
        android:background="@null"/>


    <EditText
        android:layout_width="@dimen/button_text_width"
        android:layout_height="@dimen/button_text_height"
        android:id="@+id/wordsearchText"
        android:layout_alignBottom="@+id/wordsearch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Wordsearch"
        android:textSize="20dp"
        android:background="@null"/>


    <EditText
        android:layout_width="@dimen/button_text_width"
        android:layout_height="@dimen/button_text_height"
        android:id="@+id/sudokuText"
        android:layout_alignBottom="@+id/sudoku"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Sudoku"
        android:textSize="20dp"
        android:background="@null"/>

</RelativeLayout>
