<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.puzzle.andrew.sudowordsandroid.MainMenu">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:autoText="false"
        android:fontFamily="serif"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/crossword"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginEnd="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:elevation="24dp"
        android:onClick="openCrossword"
        android:src="@drawable/crossword"
        app:layout_constraintBottom_toTopOf="@+id/wordsearch"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/textView"
        app:layout_constraintRight_toRightOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageButton
        android:id="@+id/wordsearch"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:elevation="24dp"
        android:nestedScrollingEnabled="false"
        android:onClick="openWordsearch"
        android:src="@drawable/wordsearch"
        app:layout_constraintBottom_toTopOf="@+id/sudoku"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/crossword"
        app:layout_constraintRight_toRightOf="@+id/crossword"
        app:layout_constraintTop_toBottomOf="@+id/crossword"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageButton
        android:id="@+id/sudoku"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:elevation="24dp"
        android:onClick="openSudoku"
        android:src="@drawable/sudoku"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/wordsearch"
        app:layout_constraintRight_toRightOf="@+id/wordsearch"
        app:layout_constraintTop_toBottomOf="@+id/wordsearch"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
