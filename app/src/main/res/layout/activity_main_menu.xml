<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.puzzle.andrew.sudowordsandroid.MainMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SudoWords"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:autoText="false"
        android:textSize="35sp" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/crossword"
        android:src="@drawable/crossword"
        android:onClick="openCrossword"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/wordsearch" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/wordsearch"
        android:src="@drawable/wordsearch"
        android:nestedScrollingEnabled="false"
        android:onClick="openWordsearch"
        android:layout_alignLeft="@+id/crossword"
        android:layout_alignStart="@+id/crossword"
        android:layout_above="@+id/sudoku" />

    <ImageButton
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/sudoku"
        android:src="@drawable/sudoku"
        android:onClick="openSudoku"
        android:layout_alignLeft="@+id/wordsearch"
        android:layout_alignStart="@+id/wordsearch"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
